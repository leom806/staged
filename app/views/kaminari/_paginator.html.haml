-#  The container tag
-#  available local variables
-#    current_page:  a page object for the currently displayed page
-#    total_pages:   total number of pages
-#    per_page:      number of items to fetch per page
-#    remote:        data-remote
-#    paginator:     the paginator that renders the pagination tags inside
= paginator.render do
  %nav.flex.items-center.justify-between.p-5{"aria-label" => "Paginação dos items da tabela"}
    %span.text-sm.font-normal.text-gray-500.dark:text-gray-400
      Mostrando
      %span.font-semibold.text-gray-900.dark:text-white= per_page
      de
      %span.font-semibold.text-gray-900.dark:text-white= total_pages * per_page

    %ul.inline-flex.-space-x-px.text-sm.h-8
      = prev_page_tag
      - each_page do |page|
        - if page.display_tag?
          = page_tag page
        - elsif !page.was_truncated?
          = gap_tag
      = next_page_tag
